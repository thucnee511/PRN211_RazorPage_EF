@page
@model SE171089_RazorPage.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container-fluid">
    <div class="container mx-auto my-0">
        <p class="h1 text-center">Login</p>
        <form method="post" class="w-50 p-5 h-auto my-0 mx-auto">
            <div class="form-group p-2">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <p class="text-danger text-center">@ViewData["Error"]</p>
            <div class="w-50 mx-auto my-0 p-2">
                <button type="submit" class="btn btn-primary">Login</button>
                <button type="reset" class="btn btn-danger">Reset</button>
            </div>
        </form>
    </div>
</div>
